<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework> <!-- Targeting .NET 9 -->
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>CoreIdent.Core</PackageId>
    <Version>0.1.0-alpha</Version>
    <Authors>CoreIdent Contributors</Authors> <!-- Placeholder -->
    <Description>Core authentication and identity primitives for CoreIdent.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression> <!-- As per principles -->
    <PackageProjectUrl>https://github.com/your-repo/CoreIdent</PackageProjectUrl> <!-- Placeholder -->
    <RepositoryUrl>https://github.com/your-repo/CoreIdent.git</RepositoryUrl> <!-- Placeholder -->
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <!-- Dependencies will be added as needed -->
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="9.0.4" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.4" />
    <PackageReference Include="Microsoft.Extensions.Identity.Core" Version="9.0.4" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="9.0.4" />
    <PackageReference Include="Microsoft.IdentityModel.Tokens" Version="8.8.0" />
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="8.8.0" />
  </ItemGroup>

</Project>
