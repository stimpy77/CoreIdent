{
  "name": "CoreIdent (.NET 10)",
  "image": "mcr.microsoft.com/devcontainers/dotnet:10.0-noble",
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csdevkit",
        "ms-dotnettools.csharp",
        "editorconfig.editorconfig",
        "GitHub.vscode-github-actions"
      ]
    }
  },
  "containerEnv": {
    "DOTNET_CLI_TELEMETRY_OPTOUT": "1",
    "DOTNET_SKIP_FIRST_TIME_EXPERIENCE": "1",
    "ConnectionStrings__CoreIdent": "Data Source=/workspaces/CoreIdent/.devcontainer/coreident.dev.db"
  },
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y sqlite3 && dotnet --info && dotnet restore CoreIdent.sln",
  "remoteUser": "vscode"
}
